<main>

<h3><%=@question.question_text %></h3>

<p>Asked by<%= @asker.username %></p>
<p>Updated on<%= @question.updated_at %></p>
<p>Comments:<%@question.comments.size%></p>
<p>Votes:<%@question.votes.size%></p>

<a href="/questions/<%=@question.id%>/edit">Up Vote</a>
<a href="/questions/<%=@question.id%>/edit">Down Vote</a>
<a href="/questions/<%=@question.id%>/edit">Favorite</a>

<h5>Comments</h5>

<% @question.comments.each do |comment| %>
<p><%= comment.comment_text %></p>
<% end %>

<h5>Answers</h5>
<% if @question.answers.size > 0 %>
<% @question.answers.each do |answer| %>
<p><%= answer.answer_text %></p>
<% end %>
<% end %>

<h5>Your Answer</h5>


</main>