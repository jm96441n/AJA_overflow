<body>
    <header id="header" class="header top-bar">
      <div class="title-nav-wrapper">
      <a id='home_link' href='/'><h1 class="top-bar-title">Yoda Know</h1></a>
      <nav>
        <ul class="menu top-bar-right">

          <% if logged_in? %>
          <div class='user_buttons'>
            <a class='user_buttons' id='logout' href='/logout'><li>Logout</li></a>

            <a class='user_buttons' href='/users/<%= @current_user.id %>'><li><%= @current_user.username %></li></a>
          </div>

          <% else %>

        <div id='login_form'>
          <%= erb :'/sessions/_login' %>
        </div>
        <div class='user_buttons'>
            <a class='user_buttons' id='login_link' href='/login'><li>Login</li></a>

            <a class='user_buttons' id="register-link" href='/users/new'><li>Register</li></a>
          </div>
          <% end %>
        </ul>
      </nav>
    </div>
    </header>

    <main id="main-area">
      <%= yield %>
    </main>



